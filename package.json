{
  "name": "comm-service",
  "version": "0.1.0",
  "description": "Centralized bidirectional communication service for microservices",
  "author": "Christian",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy:build": "npm run build && docker build -t comm-service:latest .",
    "deploy:save": "docker save comm-service:latest | gzip > deployment/comm-service-latest.tar.gz",
    "deploy:quick": "./scripts/quick-deploy.sh",
    "deploy:all": "npm run deploy:build && npm run deploy:save && npm run deploy:quick",
    "telegram:test": "./scripts/test-telegram.sh",
    "telegram:test:local": "./scripts/test-telegram.sh local",
    "telegram:logs": "docker logs comm-service 2>&1 | grep -i telegram | tail -20",
    "health:check": "curl -s http://localhost:8080/v1/health | jq .",
    "health:check:nas": "curl -s http://192.168.1.11:8080/v1/health | jq .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "redis:cli": "docker exec -it comm-redis redis-cli",
    "sdk:generate": "openapi-generator-cli generate -c openapi-generator-config.yaml",
    "sdk:build": "npm run sdk:generate && cd sdk && npm install && npm run build",
    "sdk:publish": "cd sdk && npm publish --registry http://192.168.1.11:4873",
    "generate:token": "ts-node src/generate-token.ts",
    "token:gocardless": "ts-node src/generate-token.ts gocardless-service messages:send notifications:telegram",
    "token:help": "ts-node src/generate-token.ts --help"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "nest-winston": "^1.9.4",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.6.12",
    "rxjs": "^7.8.1",
    "telegraf": "^4.15.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@openapitools/openapi-generator-cli": "^2.23.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
